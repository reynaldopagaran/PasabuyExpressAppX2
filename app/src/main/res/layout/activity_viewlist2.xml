<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Viewlist2">

    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <View
        android:id="@+id/headerBackground1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@color/primary"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageBack"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_back"
        app:tint="@color/btncreate"/>


    <EditText
        android:id="@+id/etFirstName2"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="73dp"
        android:background="@drawable/background_input"
        android:drawableStart="@drawable/ic_addcart"
        android:ems="10"
        android:hint="Add Items"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:textColor="@color/btncreate"
        android:textSize="@dimen/_13ssp" />

    <EditText
        android:id="@+id/etFavFood2"
        android:layout_width="116dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="236dp"
        android:layout_marginTop="73dp"
        android:background="@drawable/background_input"
        android:ems="10"
        android:hint="Quantity"
        android:textAlignment="center"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:textColor="@color/btncreate"
        android:textSize="@dimen/_13ssp" />

    <Button
        android:id="@+id/btnAdd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etFirstName2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="@dimen/_190sdp"
        android:layout_marginTop="15dp"
        android:text="Add Items" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listView2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_170sdp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/btnAdd2"
        android:layout_height="@dimen/_30sdp"
        android:stretchColumns="1,2"
        android:layout_margin="8dp">
        <TableRow>

            <TextView
                android:id="@+id/textViewItems"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etItems"
                android:layout_alignParentStart="true"
                android:text="Add Items"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textAddQuantity"
                android:layout_width="157dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/etItems"
                android:layout_alignParentStart="true"
                android:text="Quantity"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="660dp"
        android:layout_marginEnd="140dp"
        android:text="Done" />
</RelativeLayout>